<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TerraMarcadaV2.Views.GeoCamera"
             Title="GeoCamera" BackgroundColor="Black">
    <Grid>
        <toolkit:CameraView x:Name="Camera"
                            HorizontalOptions="Fill"
                            VerticalOptions="Fill" >
            <toolkit:CameraView.GestureRecognizers>
            <PinchGestureRecognizer PinchUpdated="OnPinchUpdated" />
            </toolkit:CameraView.GestureRecognizers>
        </toolkit:CameraView>

        <Grid Padding="16"
              RowDefinitions="Auto,*"
              ColumnDefinitions="*">
            <VerticalStackLayout Spacing="4">
                <Border Padding="8"
                        BackgroundColor="#66000000"
                        StrokeShape="RoundRectangle 10">
                    <VerticalStackLayout Spacing="2">
                        <Label x:Name="LblDate"
                               TextColor="White"
                               FontSize="12" />
                        <Label x:Name="LblDMS"
                               TextColor="White"
                               FontSize="12" />
                        <Label x:Name="LblDec"
                               TextColor="White"
                               FontSize="12" />
                        <Label x:Name="LblExtra"
                               TextColor="White"
                               FontSize="12" />
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="1"
                                   Spacing="12"
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"
                                   Margin="0,0,0,20">
                <Button Text="ðŸ”„"
                        WidthRequest="56"
                        HeightRequest="56"
                        CornerRadius="28"
                        BackgroundColor="#33000000"
                        TextColor="White"
                        Clicked="ToggleCamera_Clicked" />
                <Button Text="ðŸ“¸ Capturar"
                        x:Name="BtnCapture"
                        Padding="20,12"
                        CornerRadius="16"
                        BackgroundColor="#F4A261"
                        TextColor="Black"
                        Clicked="Capture_Clicked" />
                <Button Text="âš¡"
                        WidthRequest="56"
                        HeightRequest="56"
                        CornerRadius="28"
                        BackgroundColor="#33000000"
                        TextColor="White"
                        Clicked="ToggleFlash_Clicked" x:Name="BtnFlash" />

                <ActivityIndicator x:Name="CaptureIndicator" 
                                   IsRunning="False" 
                                   IsVisible="False" 
                                   Color="White" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center" />
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
