<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TerraMarcadaV2.ViewModels"
             x:Class="TerraMarcadaV2.Views.SelectDevicePage">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Dispositivos Bluetooth" FontSize="22" FontAttributes="Bold"/>

        <Button Text="Buscar" Clicked="OnBuscarClicked"/>

        <Label x:Name="StatusLabel" Text="" FontSize="16" TextColor="Red" IsVisible="False"/>

        <CollectionView x:Name="DevicesView"
                ItemsSource="{Binding Devices}"
                SelectionMode="Single"
                SelectionChanged="OnDeviceSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="5" Stroke="Gray" StrokeShape="RoundRectangle 12">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Address}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
