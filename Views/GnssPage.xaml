<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TerraMarcadaV2.ViewModels"
             xmlns:local="clr-namespace:TerraMarcadaV2.Helpers"
             x:Class="TerraMarcadaV2.Views.GnssPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Conectar GNSS -->
            <Button Text="Conectar ao GNSS" 
                    Command="{Binding ConnectCommand}" 
                    IsEnabled="{Binding Connected, Converter={StaticResource InverseBoolConverter}}"
                    BackgroundColor="#0077B6" 
                    TextColor="White" 
                    CornerRadius="12"
                    FontSize="18"
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand"/>

            <!-- Coordenadas -->
            <Border Padding="15" StrokeShape="RoundRectangle 12" Stroke="Gray" BackgroundColor="#f0f8ff" Shadow="True">
                <VerticalStackLayout>
                    <Label Text="Coordenadas" FontSize="22" FontAttributes="Bold" TextColor="#0077B6"/>
                    <HorizontalStackLayout>
                        <Label Text="Lat:" FontSize="16" FontAttributes="Italic"/>
                        <Label Text="{Binding Data.Latitude, StringFormat='{0:F6}'}" FontSize="16"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Lon:" FontSize="16" FontAttributes="Italic"/>
                        <Label Text="{Binding Data.Longitude, StringFormat='{0:F6}'}" FontSize="16"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Alt:" FontSize="16" FontAttributes="Italic"/>
                        <Label Text="{Binding Data.Altitude, StringFormat='{0:F2} m'}" FontSize="16"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Precisão -->
            <Border Padding="15" StrokeShape="RoundRectangle 12" Stroke="Gray" BackgroundColor="#f0f8ff" Shadow="True">
                <VerticalStackLayout>
                    <Label Text="Precisão" FontSize="22" FontAttributes="Bold" TextColor="#0077B6"/>
                    <HorizontalStackLayout>
                        <Label Text="HDOP:" FontSize="16" FontAttributes="Italic"/>
                        <Label Text="{Binding Data.Hdop, StringFormat='{0:F2}'}" FontSize="16"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout>
                        <Label Text="Fix:" FontSize="16" FontAttributes="Italic"/>
                        <Label Text="{Binding Data.FixType}" FontSize="16"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Satélites -->
            <Border Padding="15" StrokeShape="RoundRectangle 12" Stroke="Gray" BackgroundColor="#f0f8ff" Shadow="True">
                <VerticalStackLayout>
                    <Label Text="Satélites" FontSize="22" FontAttributes="Bold" TextColor="#0077B6"/>
                    <Label Text="{Binding Data.SatellitesVisible, StringFormat='Visíveis: {0}'}" FontSize="16"/>


                    <!-- Exibir lista de satélites -->
                    <StackLayout>
                        <Label Text="Satélites Usados:" FontSize="16" FontAttributes="Italic"/>
                        <ListView ItemsSource="{Binding Data.Satellites}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Orientation="Horizontal" Padding="5">
                                            <Label Text="{Binding SatelliteId}" FontSize="14"/>
                                            <Label Text="{Binding SignalStrength, StringFormat='Sinal: {0:F2}dB'}" FontSize="14" HorizontalOptions="EndAndExpand"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackLayout>
                </VerticalStackLayout>
            </Border>


            <!-- Tempo -->
            <Border Padding="15" StrokeShape="RoundRectangle 12" Stroke="Gray" BackgroundColor="#f0f8ff" Shadow="True">
                <VerticalStackLayout>
                    <Label Text="Tempo" FontSize="22" FontAttributes="Bold" TextColor="#0077B6"/>
                    <Label Text="{Binding Data.UtcTime, StringFormat='UTC: {0:HH:mm:ss}'}" FontSize="16"/>
                </VerticalStackLayout>
            </Border>

            <!-- Botão Salvar Ponto -->
            <Button Text="Salvar Ponto" 
                    BackgroundColor="#4CAF50" 
                    TextColor="White" 
                    CornerRadius="12" 
                    HeightRequest="50"
                    FontSize="18"
                    HorizontalOptions="FillAndExpand"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
